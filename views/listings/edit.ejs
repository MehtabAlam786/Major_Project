<% layout("/layouts/boilerplate") %>
<body>
    <div class="row mt-3">
    <div class="col-8 offset-2">
    <h3>Edit your listing</h3>
    <form method="POST" action="/listings/<%= listing._id %>?_method=PUT" novalidate class="needs-validation" enctype="multipart/form-data">
        <div class="mb-4 mt-4">
            <label for="title" class="form-label label-tight">Title</label>
            <input name="listing[title]" value="<%= listing.title %>" type="text" class="form-control" required id="title">
            <div class="valid-feedback">Title looks good!</div>
        </div>

        <div class="mb-4">
            <label for="description" class="form-label label-tight">Description</label>
            <textarea name="listing[description]" type="text" class="form-control" required id="description"><%= listing.description %></textarea>
            <div class="invalid-feedback">Please enter a short description</div>
        </div>

        <div class="mb-4">
            Original listing Image <br>
            <img class="listing-image" src="<%= originalImageUrl %>">
        </div>

        <div class="mb-4">
            <label for="image" class="form-label label-tight">Upload New Image</label>
            <input name="listing[image]" type="file" class="form-control" id="image">
        </div>

        <div class="row">
            <div class="mb-4 col-md-4">
                <label for="price" class="form-label label-tight">Price</label>
                <input name="listing[price]" value="<%= listing.price %>" type="number" required class="form-control" id="price">
                <div class="invalid-feedback">Price should be valid</div>
            </div>

            <div class="mb-4 col-md-8">
                <label for="country" class="form-label label-tight">Country</label>
                <input name="listing[country]" value="<%= listing.country %>" type="text" required class="form-control" id="country">
                <div class="invalid-feedback">Country name should be valid</div>
            </div>
        </div>

        <div class="mb-3">
            <label for="location" class="form-label label-tight">Location</label>
            <input name="listing[location]" value="<%= listing.location %>" type="text" required class="form-control" id="location">
            <div class="invalid-feedback">Location should be valid</div>
        </div>

        <button class="btn btn-dark edit-btn mt-3 mb-3">Edit</button>
    </form>
</div>
</div>
</body>