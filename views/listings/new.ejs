<% layout("/layouts/boilerplate") %>
<body>
<div class="row mt-3">
    <div class="col-8 offset-2">
    <h3>Create a new listing</h3>
    <form method="POST" action="/listings" novalidate class="needs-validation" enctype="multipart/form-data">
        <div class="mb-4 mt-4">
            <label for="title" class="form-label label-tight">Title</label>
            <input name="listing[title]" placeholder="Add a catchy title" type="text" class="form-control" required id="title">
            <div class="valid-feedback">Title looks good!</div>
            <div class="invalid-feedback">Please Enter a title!</div>
        </div>
        
        <div class="mb-4">
            <label for="description" class="form-label label-tight">Description</label>
            <textarea name="listing[description]" placeholder="Enter description" type="text" class="form-control" required id="description"></textarea>
            <div class="invalid-feedback">Please enter a short description</div>
        </div>
        
        <div class="mb-4">
            <label for="image" class="form-label label-tight">Upload image</label>
            <input name="listing[image]" type="file" class="form-control" id="image" required>
        </div>
        
        <div class="row">
            <div class="mb-4 col-md-4">
                <label for="price" class="form-label label-tight">Price</label>
                <input name="listing[price]" placeholder="1200" class="form-control" required id="price">
                <div class="invalid-feedback">Price should be valid</div>
            </div>
            
            <div class="mb-4 col-md-8">
                <label for="country" class="form-label label-tight">Country</label>
                <input name="listing[country]" placeholder="India" type="text" class="form-control" required id="country">
                <div class="invalid-feedback">Country name should be valid</div>
            </div>
        </div>
       
        <div class="mb-3">
            <label for="location" class="form-label label-tight">Location</label>
            <input name="listing[location]" placeholder="Jaipur , Rajasthan" type="text" class="form-control" required id="location">
            <div class="invalid-feedback">Location should be valid</div>
        </div>
        
        <button class="btn btn-dark add-btn mt-3">Add</button>

    </form>
    </div>
</div>
</body>
